@using CoreOAIPexam;
@model List<Auto>


<h2>Our Cars</h2>
<div class="row justify-content-end">
    <a class="btn btn-primary" asp-controller="Autos"
       asp-action="Add" role="button">Add car</a>
</div>
<br />

<div class="row">
    @foreach (var auto in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <div>
                        <img class="card-img-top" src="~/images/audi-logo-png-726.png"
                             alt="@auto.name" />
                    </div>
                    <h2 class="card-title text-center">
                        @auto.id_auto<br />
                        <a href="@auto.model" target=_blank>@auto.name</a>
                    </h2>
                    <div>
                        <p class="font-weight-normal">@auto.characteristic</p>
                    </div>
                    <div class="text-center">
                        <a class="btn btn-danger" asp-controller="Autos"
                           asp-action="Buy" asp-route-name="@auto.name"
                           role="button">
                            Buy
                        </a>
                        <a class="btn btn-danger" asp-controller="Autos"
                           asp-action="Remove" asp-route-name="@auto.name"
                           role="button">
                            Remove
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>